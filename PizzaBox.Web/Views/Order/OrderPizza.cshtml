@using PizzaBox.Web.Models
@{
    OrderWeb order = (OrderWeb)ViewData["order"];
}
<h1>
    @order.Customer.Email
</h1>
<h2>
    @order.Location
</h2>
<form asp-controller="OrderPizza" asp-action="PickedLocation" method="post" asp-for="Pizza">
    @Html.DropDownList("crust",
        new SelectList(Enum.GetValues(typeof(CrustTypes))),
        "Pick Crust",
        new{@class = "form-control"})
    @Html.DropDownList("size",
        new SelectList(Enum.GetValues(typeof(SizesTypes))),
        "Pick Size",
        new{@class = "form-control"})
    @for(int i=0;i<5;i++){
        <tr>
            <td>
                @Html.DropDownList($"toppings[{i}]",
                    new SelectList(Enum.GetValues(typeof(ToppingsTypes))),
                    "Pick Topping",
                    new{@class = "form-control"})
            </td>
        </tr>
    }
    <input type="submit" value="Submit">
</form>