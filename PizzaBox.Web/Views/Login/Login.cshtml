@model Login
@{
    ViewData["Title"] = "Login Page";
}
<div class="text-center">
    <h1>Login</h1>
    <form method="post">
        <label for="email">Email</label>
        <input type="email" asp-for="Email">
        <label for="Password">Password</label>
        <input type="pass" asp-for="Pass">
        <br>
        <input type="submit" value="Submit">
    </form>
</div>
